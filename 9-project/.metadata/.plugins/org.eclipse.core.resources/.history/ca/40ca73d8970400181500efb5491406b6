package com.kaishengit.web.service;

import java.util.Arrays;
import java.util.List;

import com.kaishengit.entity.Customer;
import com.kaishengit.util.Config;

public class CustomerService {

	/**
	 * 新增客户是获得所有客户来源列表
	 * @return
	 */
	public List<String> findAllSources() {
		 String sourceStr = Config.get("customer.source");
		 String[] sourceArray = sourceStr.split(",");
		 return Arrays.asList(sourceArray);
	}
	
	/**
	 * 新增客户是获得所有客户行业列表
	 * @return
	 */
	public List<String> findAllTrades() {
		 String tradeStr = Config.get("customer.trade");
		 String[] tradeArray = tradeStr.split(",");
		 return Arrays.asList(tradeArray);
	}

	/**
	 * 
	 * 新增当前登录员工的客户信息
	 * @param custname
	 * @param sex
	 * @param jobtitle
	 * @param mobile
	 * @param source
	 * @param trade
	 * @param level
	 * @param mark
	 * @param id 当前登录员工的accountId
	 */
	public void addMyCustomer(String custname, String sex, String jobTitle, String mobile, String source, String trade,
			String level, String mark, int accountId) {
		
		Customer customer = new Customer(custname, sex, jobTitle, mobile, trade, source, level, mark, accountId);
		
		customer.setReminder("员工添加");
		
		
		
	}

}
